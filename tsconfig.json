{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}